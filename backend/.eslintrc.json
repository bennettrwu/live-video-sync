{
  "root": true,
  "extends": [
    "./node_modules/gts/",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "project": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-throw-literal": "error",
    "@typescript-eslint/no-throw-literal": "error",
    "n/no-unpublished-import": [
      "off",
      {
        "allowModules": [],
        "convertPath": null
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "printWidth": 100
      }
    ]
  }
}