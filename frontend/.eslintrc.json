{
  "root": true,
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended",
    "./node_modules/gts/"
  ],
  "ignorePatterns": [
    "dist"
  ],
  "plugins": [
    "@typescript-eslint",
    "react-refresh"
  ],
  "parserOptions": {
    "project": [
      "./tsconfig.app.json"
    ]
  },
  "rules": {
    "no-throw-literal": "error",
    "@typescript-eslint/no-throw-literal": "error",
    "react-refresh/only-export-components": [
      "warn",
      {
        "allowConstantExport": true
      }
    ],
    "n/no-unpublished-import": [
      "off",
      {
        "allowModules": [],
        "convertPath": null
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "printWidth": 100
      }
    ]
  }
}